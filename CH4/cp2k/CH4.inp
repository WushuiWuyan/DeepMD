&GLOBAL
  PRINT_LEVEL medium
  PROJECT_NAME CH4
  RUN_TYPE MD
&END GLOBAL

&FORCE_EVAL
  METHOD QS
  &SUBSYS
    &CELL
      A 12.0  0.0  0.0
      B  0.0 12.0  0.0
      C  0.0  0.0 12.0
      PERIODIC XYZ
    &END CELL
    &COORD
      C 4.032505926 3.672551599 3.452323412
      H 4.381543386 3.068608007 2.605730142
      H 2.945396557 3.803205689 3.3846884
      H 4.520924283 4.654502853 3.427087378
      H 4.281853047 3.164147552 4.391826568
      C 6.032505926 5.672551599 5.452323412
      H 6.381543386 5.068608007 4.605730142
      H 4.945396557 5.803205689 5.3846884
      H 6.520924283 6.654502853 5.427087378
      H 6.281853047 5.164147552 6.391826568

    &END COORD
    &KIND H
      ELEMENT H
      BASIS_SET DZVP-MOLOPT-SR-GTH-q1
      POTENTIAL GTH-PBE
    &END KIND
    &KIND C
      ELEMENT C
      BASIS_SET DZVP-MOLOPT-SR-GTH-q4
      POTENTIAL GTH-PBE
    &END KIND
    &KIND O
      ELEMENT O
      BASIS_SET DZVP-MOLOPT-SR-GTH-q6
      POTENTIAL GTH-PBE
    &END KIND
  &END SUBSYS
  &DFT
    POTENTIAL_FILE_NAME POTENTIAL
    BASIS_SET_FILE_NAME BASIS_MOLOPT
    &MGRID
      CUTOFF 400
      REL_CUTOFF 60
    &END MGRID
    &QS
      EPS_DEFAULT 1.0E-13
    &END QS
    &XC
      &VDW_POTENTIAL
        POTENTIAL_TYPE PAIR_POTENTIAL
        &PAIR_POTENTIAL
          REFERENCE_FUNCTIONAL PBE
          PARAMETER_FILE_NAME dftd3.dat
          TYPE DFTD3
        &END PAIR_POTENTIAL
      &END VDW_POTENTIAL
      &XC_FUNCTIONAL PBE
      &END XC_FUNCTIONAL
    &END XC
    &SCF
      EPS_SCF 1e-06
      MAX_SCF 50
      SCF_GUESS RESTART
      &OUTER_SCF
        EPS_SCF 1e-06
        MAX_SCF 30
      &END OUTER_SCF
      &OT
        PRECONDITIONER FULL_SINGLE_INVERSE
        MINIMIZER DIIS
      &END OT
    &END SCF
  &END DFT
  &PRINT
    &FORCES ON
    &END FORCES
  &END PRINT
  STRESS_TENSOR ANALYTICAL
&END FORCE_EVAL

&MOTION
  &MD
    ENSEMBLE NVT  ! sampling the canonical ensemble, accurate properties might need NVE
    TEMPERATURE [K] 300
    TIMESTEP [fs] 1
    STEPS 2000
    &THERMOSTAT
      REGION MASSIVE
      TYPE CSVR
      &CSVR
        TIMECON 100 #Time constant in fs. Smaller/larger results in stronger/weaker temperature coupling
      &END CSVR
    &END THERMOSTAT
  &END MD
  &PRINT
    &FORCES
      &EACH
        MD 1
      &END EACH
    &END FORCES
    &CELL
       &EACH
         MD 1
       &END EACH
    &END CELL
    &TRAJECTORY
      &EACH
        MD 1
      &END EACH
    &END TRAJECTORY
    &RESTART
      BACKUP_COPIES 3
      &EACH
        MD 1
      &END EACH
    &END RESTART
  &END PRINT
&END MOTION
